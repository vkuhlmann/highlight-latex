\def\hll@mathdollar@setcumulative{%
	\hll@mathdollaroff
	\gdef\hll@mathdollaroff{%
		\lstset{
			classoffset=2,
			deletedelim=**[s]{$}{$},
			classoffset=0
		}%
		\hll@ismathdollaronfalse
	}%
	\lstset{
		classoffset=2,
		moredelim=**[s][\hll@mathdollarstyle]{$}{$},
		classoffset=0
	}%
	\hll@ismathdollarontrue
}

\def\hll@mathdollar@setnoncumulative{
	\hll@mathdollaroff
	\gdef\hll@mathdollaroff{%
		\lstset{
			classoffset=2,
			deletedelim=[s]{$}{$},
			classoffset=0
